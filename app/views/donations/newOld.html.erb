<h1>New Donations</h1>
<%= @donations.each do |donation| %>
	<div class ="row">
	  <%= form_for(donation) do |f| %>
	    <%= f.label :date %>
	    <%= f.date_field :date %>

	    <%= f.label :crop %>
	    <%= f.text_field :crop %>

	    <%= f.label :quantity %>
	    <%= f.number_field :quantity %>

	    <%= f.submit "Record Donation" %>
	  <% end %>
	</div>
<% end %>
